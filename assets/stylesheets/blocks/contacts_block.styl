.contacts-block
  padding-top 120px

  &__map
    position relative // opacity msk
    display flex
    justify-content center
    align-items center
    top 0
    size(auto, 200px)
    margin 0
    opacity-mask("../images/jpg/bg_map.jpg", lightGrayDefault)

  &__map-description
    display flex
    flex-direction column
    justify-content space-between
    width 135px
    align-items center

    span
      font bold 24px MainText
      color redDefault
      text-transform uppercase
      margin-top 20px

      &::after
        content ''
        display block
        height 3px
        width 60px
        background redDefault
        margin 20px auto 0

  .contacts-block__social-networks
    display flex
    width: 1205px
    margin 0 auto
    margin-top 40px

  &__subscribe, 
  &__blogs, 
  &__instagram
    display inline-block

  &__subscribe
      size(480px, auto)
      margin-right 31px

      .about
        margin-bottom 48px

        .about__header, 
        .about__text
          margin 0
          display inline-block

        .about__header
          font bold 46px MainText
          color grayFooterText
          margin-bottom 43px

        .about__text
          font 15px BasicText
          color grayDefault
          line-height 1.5em

      .count-followers 
        display inline-block
        margin-bottom 19px

        .counter
          font bold 20px MainText
          margin-right 5px

        .text-counter
          font 900 16px MainText

      .follow-links
        width 480px
        border-top 1px solid lightnessGray
        padding-top 19px

        span
          font italic 300 15px BasicText
          color grayDefault
          margin-right 24px

        .soc-network
          margin-right 16px
          cursor pointer

      .subscription-form
        margin-top 40px

        .subscribe-area
          size(229px, 40px)
          border 1px solid lightnessGray
          font italic 300 15px BasicText
          color grayFooterText

        .button-foo
          size(149px, 40px)
          border 1px solid limeDefault
          background limeDefault
          font bold 14px MainText
          text-transform uppercase
          color white
          cursor pointer

    .contacts-block__blogs
      size(336px, auto)

      .header-blog
        parameters-header-text()
        margin-bottom 40px

      .post-blogs
        size(338px, 80px)
        display inline-block
        margin-bottom 31px
        cursor pointer

        .pict-blog
          display inline-block
          margin-bottom -30px

        .text-block
          display inline-block
          margin-left: 140px;
          margin-top: -54px;

          .text-blog, 
          .date-blog
            // margin 0

          .text-blog
            font 12px MainText
            color darkGray
            text-transform uppercase
            line-height 1.5em
            display: inline-block;

          .date-blog
            font italic 13px BasicText
            color grayDefault
            margin-top 8px

    .contacts-block__instagram
      size(270px, auto)
      margin-left 85px

      .header-blog
        parameters-header-text()
        margin-bottom 40px

      .photo-from-inst
        display flex
        flex-wrap wrap
        justify-content space-around


        .inst
          margin-bottom 2px
          cursor pointer

      .view-inst 
        display inline-block
        margin-top 20px
        font italic 13px BasicText
        color darkGray

  .contacts-block__footer-copyrights
    size(1205px, auto)
    border-top 1px solid lightnessGray
    margin 0 auto
    margin-top 40px

    .foo-text
      font 14px MainText
      margin: 24px 0 22px 0 
      text-align: center

      span 
        color redDefault
