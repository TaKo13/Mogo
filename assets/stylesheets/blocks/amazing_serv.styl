.amazing-services
  padding-top 105px

  .content-blocks
    display flex
    flex-wrap wrap
    position relative
    width 1200px
    height 255px
    margin 0 auto
    justify-content center
    margin-bottom 130px

    $descriptionHeight = 77px

    &::after
      content ""
      display block
      position absolute
      left 0
      top $descriptionHeight + 50px
      width 100%
      height 1px
      background lightnessGray

    &__description
      display flex
      width 350px
      height $descriptionHeight
      margin-bottom 100px
      align-items flex-start

      &:not(:nth-child(3n))
        margin-right 50px

      .text-block
        margin-left 28px

        .title
          font CaptionText
          text-transform uppercase 
          margin 0 0 20px
          
        .text
          font 15px BasicText
          margin 0
          color grayDefault
   
