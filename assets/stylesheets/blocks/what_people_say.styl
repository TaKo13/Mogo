.what_people_say
  position relative
  height 830px
  opacity-mask("../images/jpg/bg_mountain.jpg")
  padding-top 140px

  .section-header
    padding-top: 105px

  .comments_people
    display flex
    flex-wrap wrap
    width 1110px
    margin 0 auto
    position relative
    top 28px

    .person-block
      display flex
      size(510px, 170px)

      .avatar
        display inline-block
        size(110px, 110px)
        margin-bottom 43px

      .about-person
        display inline-block
        margin-left 23px

        .name, 
        .post, 
        .text
          margin 0

        .name
          font CaptionText
          text-transform uppercase
          

        .position
          font italic 300 15px BasicText
          line-height 3
          display block

          &:after
            content ''
            display block
            border-top 3px solid 
            width 60px
            border-color redDefault
            margin-top 5px

        .text
          font italic 300 15px BasicText
          color grayDefault
          width 376px
          margin-top 14px

      &:nth-child(even)
        margin-left: 80px

      &:first-child,
      &:nth-child(2)
        margin-bottom 70px
